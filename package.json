{
    "browserslist": [
        "last 1 major version",
        ">= 1%",
        "Chrome >= 45",
        "Firefox >= 38",
        "Edge >= 12",
        "Explorer >= 10",
        "iOS >= 9",
        "Safari >= 9",
        "Android >= 4.4",
        "Opera >= 30"
    ],
    "dependencies": {
        "bootstrap": "^4.1.0",
        "gulp": "^3.9.1",
        "gulp-autoprefixer": "^5.0.0",
        "gulp-rename": "^1.3.0",
        "gulp-sass": "^4.0.1",
        "natives": "^1.1.6",
        "npm-run-all": "^4.1.3"
    },
    "scripts": {
        "gulp-build": "gulp build",
        "gulp-watch": "gulp watch",
        "jekyll-serve": "JEKYLL_ENV=production jekyll serve --livereload",
        "jekyll-watch": "JEKYLL_ENV=production jekyll build --watch",
        "publish": "gulp build && JEKYLL_ENV=production jekyll build --destination publish",
        "serve": "gulp build && npm-run-all --parallel gulp-watch jekyll-serve",
        "watch": "gulp build && npm-run-all --parallel gulp-watch jekyll-watch"
    }
}
